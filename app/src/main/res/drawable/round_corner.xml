        <shape android:shape="rectangle">
            <solid android:color="@color/mocaPrimary" />
            <corners android:radius="17dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGray" />
            <corners android:radius="17dp" />
        </shape>
    </item>
</ripple>